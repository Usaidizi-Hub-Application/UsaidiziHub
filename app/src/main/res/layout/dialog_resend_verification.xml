<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:padding="15dp" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:layout_height="wrap_content" android:layout_width="wrap_content" android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/dialogTitle" android:textColor="@android:color/black" android:textSize="21sp" android:text="Resend verification email"/>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/confirm_email" android:textSize="20sp" android:layout_marginTop="5dp" android:inputType="textEmailAddress" android:hint="Email"/>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/confirm_password" android:textSize="20sp" android:layout_marginTop="5dp" android:inputType="textPassword" android:hint="Password"/>


    <RelativeLayout android:layout_height="wrap_content" android:layout_width="wrap_content">

    <TextView android:layout_marginRight="10dp" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/dialogCancel" android:textColor="@android:color/holo_blue_dark" android:textSize="15sp" android:text="Cancel" android:layout_marginTop="30dp" android:layout_marginBottom="10dp"/>

    <TextView android:layout_marginLeft="10dp" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/dialogConfirm" android:textColor="@android:color/holo_blue_dark" android:textSize="15sp" android:text="Confirm" android:layout_marginTop="30dp" android:layout_marginBottom="10dp" android:layout_alignParentRight="true"/>

</RelativeLayout>

</LinearLayout>